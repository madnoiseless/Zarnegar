<%- include("partials/header"); %> <% if (err) { %>
<p style="color: red">Error: <%= err %></p>
<% } else if (item) { %>
<h2>Item Details</h2>
<ul>
  <li>ID: <%= item.id %></li>
  <li>Name: <%= item.name01 %></li>
  <li>Weight: <%= item.weight %></li>
  <li>Fineness: <%= item.fineness %></li>
  <li>Price: <%= item.price %></li>
</ul>

<form action="/delete-item" method="POST">
  <input type="hidden" name="itemId" value="<%= item._id %>" />
  <button
    class="btn"
    type="submit"
    onclick="return confirm('Are you sure you want to delete this item?')"
  >
    Delete Item
  </button>
</form>

<% } else { %>
<p>No item found with ID: <%= searchId %></p>
<% } %>

<form action="/find-item">
  <label for="itemId">Item ID:</label>
  <input class="form-control" type="text" id="itemId" name="itemId" />
  <button class="btn" type="submit">Find Item</button>
</form>

<%- include("partials/footer"); %>
